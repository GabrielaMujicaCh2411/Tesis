@using Copreter.Resources;
@model Copreter.Models.Unidad.UnidadIndexVM;

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>@Resource.UNIDAD_CATALAGO_Titulo</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">@Resource.UNIDAD_CATALAGO_Titulo</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">

                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">@Resource.CARD_TITLE</h3>
                        </div>
                        <div class="card-body">
                            <div class="row">

                                @foreach (var item in Model.DtoList)
                                {
                                    var imagePath = @item.Imagen;
                                    <div class="col-md-12 col-lg-6 col-xl-4">
                                        <div class="card mb-2 bg-gradient-dark">
                                            <img class="card-img-top" src="~/images/@imagePath" alt="Dist Photo 1" width="390" height="350">
                                            <div class="card-img-overlay d-flex flex-column justify-content-end">
                                                <a asp-controller="Unidad" asp-action="DetalleCatalago" asp-route-id="@item.Id" class="card-title text-primary text-black">@item.Nombre , @item.Modelo (@item.CantidadDisponible) </a>
                                            </div>
                                        </div>
                                    </div>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
</div>