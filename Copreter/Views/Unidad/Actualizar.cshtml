@model TUnidad
@{
  var imagePath = @Html.DisplayFor(model =>model.Imagen);   
}
<style>
img{
max-width:400px;
margin:10px;
}
</style>

<body >
<section class="content">
      <div class="col-sm-12">
            <h1>Actualizar Unidades</h1>
          </div>
      <div class="container-fluid">
        <div class="row">
          <!-- left column -->
          <div class="col-md-7">
            <!-- general form elements -->
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Actualizacion de Unidades</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <form asp-action="GuardarActualizacion" asp-controller="Unidad" method="post"  enctype="multipart/form-data">
                <div class="card-body">
                  <div class="form-group">
                    <label for="exampleInputEmail1">Serie:</label>
                    <input type="text" class="form-control"  placeholder="Serie" asp-for="Serie">
                    <span asp-validation-for="Serie" class="text-danger"> </span>
                  </div>
                  <div class="form-group">
                    <label for="exampleInputPassword1">Nombre:</label>
                    <input type="text" class="form-control"  placeholder="Nombre" asp-for= "Nombre">
                    <span asp-validation-for="Nombre" class="text-danger"> </span>
                  </div>
                  <div class="form-group">
                    <label for="exampleInputPassword1">Modelo:</label>
                    <input type="text" class="form-control"  placeholder="Modelo" asp-for= "Modelo">
                    <span asp-validation-for="Modelo" class="text-danger"> </span>
                  </div>
                  <div class="form-group">
                    <label for="exampleInputPassword1">Marca</label>
                    <input type="text" class="form-control"  placeholder="Marca" asp-for= "Marca">
                    <span asp-validation-for="Marca" class="text-danger"> </span>
                  </div>
                    <div class="form-group" >
                    <label for="exampleInputPassword1">Precio</label>
                    <input type="text" class="form-control"  placeholder="Precio" asp-for= "Precio">
                    <span asp-validation-for="Precio" class="text-danger"> </span>
                  </div>
                    <div class="form-group">
                    <label for="exampleInputPassword1">Cantidad</label>
                    <input type="text" class="form-control"  placeholder="Cantidad" asp-for= "Cantidad">
                    <span asp-validation-for="Cantidad" class="text-danger"> </span>
                  </div>
                    <div class="form-group">
                    <label for="exampleInputPassword1">Descripcion</label>
                    <input type="text" class="form-control"  placeholder="Descripcion" asp-for= "Descripcion">
                    <span asp-validation-for="Descripcion" class="text-danger"> </span>
                  </div>
                    <div class="form-group">
                    <label for="exampleInputPassword1">Caracteristica 1:</label>
                    <input type="text" class="form-control"  placeholder="Caracteristica 1" asp-for= "Caracteristica1">
                    <span asp-validation-for="Caracteristica1" class="text-danger"> </span>
                  </div>
                    <div class="form-group">
                    <label for="exampleInputPassword1">Caracteristica 2:</label>
                    <input type="text" class="form-control"  placeholder="Caracteristica 2" asp-for= "Caracteristica2">
                    <span asp-validation-for="Caracteristica2" class="text-danger"> </span>
                  </div>
                    <div class="form-group">
                    <label for="exampleInputPassword1">Caracteristica 3:</label>
                    <input type="text" class="form-control"  placeholder="Caracteristica 3" asp-for= "Caracteristica3">
                    <span asp-validation-for="Caracteristica3" class="text-danger"> </span>
                  </div>
                   <div class="form-group">
                      <label for="exampleInputPassword1">Tipo Unidad</label>
                    <select class="form-control select2" style="width: 100%;"asp-for="IdTipoUnidad" asp-items="@(new SelectList(ViewBag.ListaTipoUnidad,"IdTipoUnidad","NombreTipoUnidad"))">
                  </select>
                  </div>
                    <div class="form-group">
                      <label for="exampleInputPassword1">Estado Trabajador</label>
                    <select class="form-control select2" style="width: 100%;"asp-for="IdEstadoUnidad" asp-items="@(new SelectList(ViewBag.ListaEstadoUnidad,"IdEstadoUnidad","NombreEstadoUnidad"))">
                  </select>
                  </div>
                     <div class="form-group" style="display: none">
                    <label for="exampleInputFile">Imagen</label>
                        <input type="text" class="form-control"  placeholder="Caracteristica 3" asp-for= "Imagen">
                  </div>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Actualizar</button>
                   <a asp-controller="Unidad" asp-action="Listar" class="btn btn-primary" role="button"> Cancelar</a>
                </div>

            @section Scripts
            {
              <script>
              $(document).ready(function (){
                $('.custom-file-input').on("change",function(){
                  var fileName = $(this).val().split("\\").pop();
                  $(this).next('.custom-file-label').html(fileName);
                })
              })
              </script>
            }
              </form>
            </div>
             <!-- /.card -->
          </div>
           <div  class="col-md-5"  >
            <div class="card card-success">
              <div class="card-header">
                <h3 class="card-title">Previsualizacion de Imagen</h3>
              </div>
           <div class="card-body">
                <p style="text-align:center">
                <img src="~/images/@imagePath" width="350" height="350"  alt="Product Image">
                </p>
              </div>
              </div>
              <!-- /.card-body -->
            </div>  

            </div>
          <!--/.col (right) -->
        </div>
        <!-- /.row -->
      </div><!-- /.container-fluid -->
    </section>

  <script>
  $(function () {
    //Initialize Select2 Elements
    $('.select2').select2()

    //Initialize Select2 Elements
    $('.select2bs4').select2({
      theme: 'bootstrap4'
    })
     $('.duallistbox').bootstrapDualListbox()
  }
</script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script type="text/javascript">
  (function(){
    function filePreview(input){
      if(input.files && input.files[0]){
        var reader = new FileReader();
        reader.onload = function(e){
          $('#imagePreview').html("<img src='"+e.target.result+"' />");
        }
        reader.readAsDataURL(input.files[0]);
      }
    }
    $('#imagen').change(function(){
      filePreview(this);
    });
  })();
</script>
<script src="~/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- AdminLTE App -->
<script src="~/dist/js/adminlte.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

</body>