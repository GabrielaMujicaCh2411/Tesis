@using Copreter.Resources;
@model Copreter.Models.Unidad.UnidadEditableVM;
@{
    Layout = null;
}@{
    var imagePath = @Html.DisplayFor(model => model.Imagen);
}

<!DOCTYPE html>
<html lang="zxx">
<head>
    <title>COPRETER WEB</title>
    <meta charset="UTF-8">
    <meta name="description" content="loans HTML Template">
    <meta name="keywords" content="loans, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Favicon -->
    <link href="~/img/favicon.ico" rel="shortcut icon" />

    <!-- Google font -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i&display=swap" rel="stylesheet">

    <!-- Stylesheets -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/css/owl.carousel.min.css" />
    <link rel="stylesheet" href="~/css/flaticon.css" />
    <link rel="stylesheet" href="~/css/jquery-ui.min.css" />
    <link rel="stylesheet" href="~/css/slicknav.min.css" />

    <!-- Main Stylesheets -->
    <link rel="stylesheet" href="~/css/style.css" />


    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
<body>
    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>

    <!-- Header Section -->
    <header class="header-section">
        <a href="index.html" class="site-logo">
            <img src="" alt="">
        </a>
        <nav class="header-nav">
            <ul class="main-menu">
                <li><a href="/Home" class="active">Inicio</a></li>
                <li><a href="/Home/Nosotros">Nosotros</a></li>
                <li><a asp-controller="Unidad" asp-action="IndexCatalagoExterno">Catalago</a></li>
                <li>
                    <a href="">Servicio</a>
                    <ul class="sub-menu">
                        <li><a asp-controller="Auth" asp-action="Login">Construccion</a></li>
                        <li><a asp-controller="Auth" asp-action="Login">Alquiler</a></li>
                    </ul>
                </li>
            </ul>
            <div class="header-right">
                <div class="hr-btn hr-btn-2">01 387-2174</div>
            </div>
        </nav>
    </header>
    <!-- Header Section end -->
    <!-- Loans Section end -->
    <section class="loans-section spad">
        <div class="container">
            <div class="row">

                <div class="col-md-8">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">@Resource.CARD_TITLE</h3>
                        </div>
                        <div class="card-body">
                            <div id="contentPartial">
                                <div class="row">
                                    <div class="col-md-8">

                                        <div class="card-body">

                                            <input type="hidden" asp-for="Id" />
                                            <input type="hidden" asp-for="IdUsuarioRegistro" />
                                            <input type="hidden" asp-for="FechaRegistro" />

                                            <div class="form-group">
                                                <label>@Resource.UNIDAD_Serie</label>
                                                <input type="text" class="form-control" placeholder="Serie" asp-for="Serie" readonly="@(true)">
                                                <span asp-validation-for="Serie" class="text-danger"> </span>
                                            </div>
                                            <div class="form-group">
                                                <label>@Resource.UNIDAD_Nombre</label>
                                                <input type="text" class="form-control" placeholder="Nombre" asp-for="Nombre" readonly="@(true)">
                                                <span asp-validation-for="Nombre" class="text-danger"> </span>
                                            </div>
                                            <div class="form-group">
                                                <label>@Resource.UNIDAD_Modelo</label>
                                                <input type="text" class="form-control" placeholder="Modelo" asp-for="Modelo" readonly="@(true)">
                                                <span asp-validation-for="Modelo" class="text-danger"> </span>
                                            </div>
                                            <div class="form-group">
                                                <label>@Resource.UNIDAD_Marca</label>
                                                <input type="text" class="form-control" placeholder="Marca" asp-for="Marca" readonly="@(true)">
                                                <span asp-validation-for="Marca" class="text-danger"> </span>
                                            </div>
                                            <div class="form-group">
                                                <label>@Resource.UNIDAD_Precio</label>
                                                <input type="text" class="form-control" placeholder="Precio" asp-for="Precio" readonly="@(true)">
                                                <span asp-validation-for="Precio" class="text-danger"> </span>
                                            </div>
                                            <div class="form-group">
                                                <label>@Resource.UNIDAD_Cantidad</label>
                                                <input type="text" class="form-control" placeholder="Cantidad" asp-for="Cantidad" readonly="@(true)">
                                                <span asp-validation-for="Cantidad" class="text-danger"> </span>
                                            </div>
                                            <div class="form-group">
                                                <label>@Resource.UNIDAD_Descripcion</label>
                                                <input type="text" class="form-control" placeholder="Descripción" asp-for="Descripcion" readonly="@(true)">
                                                <span asp-validation-for="Descripcion" class="text-danger"> </span>
                                            </div>
                                            <div class="form-group">
                                                <label>@Resource.UNIDAD_Caracteristica1</label>
                                                <input type="text" class="form-control" placeholder="Caracteristica 1" asp-for="Caracteristica1" readonly="@(true)">
                                                <span asp-validation-for="Caracteristica1" class="text-danger"> </span>
                                            </div>
                                            <div class="form-group">
                                                <label>@Resource.UNIDAD_Caracteristica2</label>
                                                <input type="text" class="form-control" placeholder="Caracteristica 2" asp-for="Caracteristica2" readonly="@(true)">
                                                <span asp-validation-for="Caracteristica2" class="text-danger"> </span>
                                            </div>
                                            <div class="form-group">
                                                <label>@Resource.UNIDAD_Caracteristica3</label>
                                                <input type="text" class="form-control" placeholder="Caracteristica 2" asp-for="Caracteristica3" readonly="@(true)">
                                                <span asp-validation-for="Caracteristica3" class="text-danger"> </span>
                                            </div>
                                            <div class="form-group">
                                                <label>@Resource.UNIDAD_Tipo_Unidad</label>
                                                <input type="text" class="form-control" placeholder="Tipo unidad" asp-for="TipoUnidad" readonly="@(true)">
                                                <span asp-validation-for="TipoUnidad" class="text-danger"> </span>
                                            </div>
                                            <div class="form-group">
                                                <label>@Resource.UNIDAD_Estado</label>
                                                <input type="text" class="form-control" placeholder="Estado unidad" asp-for="EstadoUnidad" readonly="@(true)">
                                                <span asp-validation-for="EstadoUnidad" class="text-danger"> </span>
                                            </div>
                                        </div>
                                        <!-- /.card-body -->
                                        <div class="card-footer">
                                            <a asp-controller="Pedido" asp-action="Alquilar" asp-route-idUnidad="@Model.Id" class="btn btn-primary">Pedir</a>
                                            <a asp-controller="Unidad" asp-action="IndexCatalagoExterno" class="btn btn-danger"><span class="fas fa-undo-alt" aria-hidden="true"></span>@Resource.BTN_Volver</a>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card card-success">
                        <div class="card-header">
                            <h3 class="card-title">Previsualizacion de Imagen</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <p style="text-align:center">
                                <img src="~/images/@imagePath" width="350" height="350" alt="Product Image">
                            </p>
                        </div>
                        <!-- /.card-body -->
                    </div>

                </div>
            </div>
        </div>
    </section>
    <!-- Loans Section end -->
    <!-- Footer Section -->
    <footer class="footer-section">
        <div class="container">

            TP-2021-2 &copy;<script>document.write(new Date().getFullYear());</script> COPRETER S.A.C. <i class="fa fa-heart-o" aria-hidden="true"></i>
            <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
        </div>
    </footer>
    <!-- Footer Section end -->
    <!--====== Javascripts & Jquery ======-->
    <script src="~/js/jquery-3.2.1.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.slicknav.min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/jquery-ui.min.js"></script>
    <script src="~/js/main.js"></script>

</body>


</html>
