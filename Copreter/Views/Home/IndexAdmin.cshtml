<!-- Content Wrapper. Contains page content -->
@model Copreter.Models.Home.HomeIndexVM;
@using System.Security.Claims;
@using Copreter.Domain.Model.Enums;

@{
    int rolId = int.Parse(User.FindFirstValue(ClaimTypes.Role));
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Bienvenido</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">COPRETER S.A.C</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <section class="content">
        <div class="row">
            <div class="col-md-6">
                <div class="container-fluid">
                    <!-- Small boxes (Stat box) -->
                    @if (rolId != (int)ERolEnum.Cliente)
                    {
                        <div class="row">

                            <div class="col-lg-6 col-6">
                                <!-- small box -->
                                <div class="small-box bg-success">
                                    <div class="inner">
                                        <h3>@Model.NuevasCoticaciones<sup style="font-size: 20px">%</sup></h3>

                                        <p>Nuevas cotizaciones</p>
                                    </div>
                                    <div class="icon">
                                        <i class="ion ion-stats-bars"></i>
                                    </div>
                                </div>
                            </div>
                            <!-- ./col -->

                            <div class="col-lg-6 col-6">
                                <!-- small box -->
                                <div class="small-box bg-warning">
                                    <div class="inner">
                                        <h3>@Model.UsuariosTotales</h3>

                                        <p>Usuarios registrados</p>
                                    </div>
                                    <div class="icon">
                                        <i class="ion ion-person-add"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- ./col -->
                    <div class="row">
                        <div class="col-lg-6 col-6">
                            <!-- small box -->
                            <div class="small-box bg-danger">
                                <div class="inner">
                                    <h3>60</h3>

                                    <p>Visitas</p>
                                </div>
                                <div class="icon">
                                    <i class="ion ion-pie-graph"></i>
                                </div>
                            </div>
                        </div>

                        <!-- ./col -->
                        <div class="col-lg-6 col-6">
                            <!-- small box -->
                            <div class="small-box bg-info">
                                <div class="inner">
                                    <h3>@Model.ObrasTerminadas</h3>

                                    <p>Obras Terminadas</p>
                                </div>
                                <div class="icon">
                                    <i class="far fa-star"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-6">
                            <!-- small box -->
                            <div class="small-box bg-warning">
                                <div class="inner">
                                    <h3>@Model.ObrasEnContruccion</h3>

                                    <p>Obras en construcciones </p>
                                </div>
                                <div class="icon">
                                    <i class="far fa-flag"></i>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-6 col-6">
                            <!-- small box -->
                            <div class="small-box bg-success">
                                <div class="inner">
                                    <h3>@Model.TrabajadoresDisponibles</h3>
                                    <p>Trabajadores de la empresa</p>
                                </div>
                                <div class="icon">
                                    <i class="fas fa-users"></i>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-6">
                            <!-- small box -->
                            <div class="small-box bg-info">
                                <div class="inner">
                                    <h3>@Model.HerramientasDisponibles</h3>
                                    <p>Herramientas disponibles</p>
                                </div>
                                <div class="icon">
                                    <i class="fas fa-thumbs-up"></i>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-6">
                            <div class="small-box bg-danger">
                                <div class="inner">
                                    <h3>@Model.HerramientasEnMantenimiento</h3>
                                    <p>Herramientas en mantenimiento</p>
                                </div>
                                <div class="icon">
                                    <i class="fas fa-cog"></i>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (rolId != (int)ERolEnum.Cliente && rolId != (int)ERolEnum.Operario && rolId != (int)ERolEnum.SinAsignar)
                    {
                        <div class="row">
                            <div class="col-lg-6 col-6">
                                <!-- small box -->
                                <div class="small-box bg-info">
                                    <div class="inner">
                                        <h3>@Model.HerramientasPorDevolver</h3>
                                        <p>Herramientas Pendientes de devolución</p>
                                    </div>
                                    <div class="icon">
                                        <i class="fas fa-thumbs-up"></i>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-6 col-6">
                             
                            </div>
                        </div>

                        <!-- small box -->
                        <div class="row">
                            <div class="col-lg-6 col-6">
                                <!-- small box -->
                                <div class="small-box bg-warning">
                                    <div class="inner">
                                        <h3>@Model.HerramientasAlquiladas</h3>
                                        <p>Alquileres en el dìa</p>
                                    </div>
                                    <div class="icon">
                                        <i class="fas fa-truck-loading"></i>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-6 col-6">
                                <div class="small-box bg-success">
                                    <div class="inner">
                                        <h3>@Model.DineroEnMes</h3>
                                        <p>Dinero recaudado del mes</p>
                                    </div>
                                    <div class="icon">
                                        <i class="fas fa-donate"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="col-md-6">
                <div class="card-body">
                    <p style="text-align:center">
                        <img src="~/images/23.JPG" width="450" height="450" alt="Product Image">
                    </p>
                </div>
            </div>
        </div>
    </section>
</div>


