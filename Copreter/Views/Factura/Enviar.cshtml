@model TFactura

<body>
<section class="content">
      <div class="col-sm-12">
            <h1>Factura</h1>
          </div>
      <div class="container-fluid">
        <div class="row">
          <!-- left column -->
          <div class="col-md-6">
            <!-- general form elements -->
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Enviar Factura</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <form asp-action="Guardar" asp-controller="Factura" method="post" enctype="multipart/form-data">
                <div class="card-body">
                   <div class="form-group" style="display: none">
                    <label for="exampleInputEmail1"> Factura Id:</label>
                    <input type="text" class="form-control" placeholder="FacturaId" asp-for="IdFactura">
                  </div>
                  <div class="form-group" style="display: none" >
                    <label for="exampleInputEmail1"> Cotizacion Id:</label>
                    <input type="text" class="form-control" placeholder="Cotizacion Id" asp-for="IdCotizacionFactura">
                  </div>
                 <div class="form-group">
                    <label for="exampleInputFile">Factura</label>
                      <div class="custom-file">
                        <input  class="form class custom-file-input" id="imagen" asp-for="Foto">
                        <label class="custom-file-label" >Elegir Archivo</label>
                      </div>
                  </div>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Enviar</button>
                   
                </div>
                    @section Scripts
            {
              <script>
              $(document).ready(function (){
                $('.custom-file-input').on("change",function(){
                  var fileName = $(this).val().split("\\").pop();
                  $(this).next('.custom-file-label').html(fileName);
                })
              })
              </script>
            }
              </form>
            </div>
             <!-- /.card -->
          </div>
        </div>
        <!-- /.row -->
      </div><!-- /.container-fluid -->
    </section>

<script src="~/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- AdminLTE App -->
<script src="~/dist/js/adminlte.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>