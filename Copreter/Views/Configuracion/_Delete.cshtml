@model Copreter.Domain.Service.Dto.Configuracion.ConfiguracionDto;
@using Copreter.Resources;

<div class="modal-dialog">

    <div class="modal-content">
        <form asp-action="DeletePopupConfirmed" asp-asp-controller="Configuracion">

            <div class="modal-header">
                <h4 class="modal-title">@Resource.TITLE_Eliminar</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="control-label">@Resource.MENSAJE_CONFIRMAR_ELIMINAR</label>
                        </div>
                    </div>
                </div>
                <!-- /.row -->

            </div>
            <div class="modal-footer justify-content-between">
                <button type="submit" class="btn btn-primary" style="float: right;">@Resource.BTN_Guardar</button>
            </div>
        </form>
    </div>
    <!-- /.modal-content -->
</div>
<!-- /.modal-dialog -->