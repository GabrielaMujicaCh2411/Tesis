@using Copreter.Resources;
@model Copreter.Models.TipoPartida.TipoPartidaEditableVM;

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>@Resource.TIPOPARTIDA_Titulo</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">@Resource.TIPOPARTIDA_Titulo</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">

                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">@Resource.CARD_TITLE</h3>
                        </div>
                        <div class="card-body">
                            <div id="contentPartial">

                                <div class="card-body">
                                    <div class="form-group">
                                        <label>@Resource.TIPOPARTIDA_Nombre</label>
                                        <input type="text" class="form-control" placeholder="Nombre" asp-for="Nombre" readonly="@(true)">
                                        <span asp-validation-for="Nombre" class="text-danger"> </span>
                                    </div>
                                    <div class="form-group">
                                        <label>@Resource.TIPOPARTIDA_Descripcion</label>
                                        <input type="text" class="form-control" placeholder="Descripcion" asp-for="Descripcion" readonly="@(true)">
                                        <span asp-validation-for="Descripcion" class="text-danger"> </span>
                                    </div>
                                </div>
                                <!-- /.card-body -->
                                <div class="card-footer">
                                    <a asp-action="Index" class="btn btn-primary">@Resource.BTN_Volver</a>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>