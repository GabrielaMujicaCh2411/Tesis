@using Copreter.Resources;
@model Copreter.Models.Pedido.PedidoEditableVM;

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>@Resource.PEDIDO_Asignar_Titulo</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item">@Resource.PEDIDO_Titulo</li>
                        <li class="breadcrumb-item active">@Resource.PEDIDO_Asignar_Titulo</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">

                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">@Resource.CARD_TITLE</h3>
                        </div>
                        <div class="card-body">
                            <div id="contentPartial">
                                <form asp-action="Asignar" asp-controller="Pedido" method="post">
                                    <div class="card-body">
                                        <div class="form-group" style="display: none">
                                            <label>@Resource.PEDIDO_Fecha_Entrega</label>
                                            <input type="text" class="form-control" placeholder="FechaEntrega" asp-for="FechaEntrega">
                                            <span asp-validation-for="FechaEntrega" class="text-danger"> </span>
                                        </div>

                                        <div class="form-group">
                                            <label>@Resource.PEDIDO_Trabajador</label>
                                            <select asp-for="IdTrabajador" class="form-control" asp-items="Model.TrabajadorLista"></select>
                                            <span asp-validation-for="IdTrabajador" class="text-danger"> </span>
                                        </div>
                                    </div>
                                    <!-- /.card-body -->
                                    <div class="card-footer">
                                        <button type="submit" class="btn btn-primary">@Resource.BTN_Aceptar</button>
                                        <button asp-action="Index" class="btn btn-primary">@Resource.BTN_Cancelar</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
</div>