@model PrograTesis.Controllers.Obracontroller.ModelObra
@{
    ViewData["Title"]="Listar Obras pendientes";
}

<section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Listar solicitudes aceptadas</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Factura</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

<section class="content">
      <div class="container-fluid">
        <div class="row">
        
        </div>
        <!-- /.row -->
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <div class="card-tools">
                  <div class="input-group input-group-sm" style="width: 150px;">
                    <input type="text" name="table_search" class="form-control float-right" placeholder="Search">
                    <div class="input-group-append">
                      <button type="submit" class="btn btn-default">
                        <i class="fas fa-search"></i>
                      </button>
                    </div>
                  </div>
                </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                  <thead style="    text-align-last: left;">
                    <tr>
                       <th style="text-align:center;">Nombre</th>
                        <th style="text-align:center;">Apellido</th>
                        <th style="text-align:center;">Nombre de la obra</th> 
                        <th style="text-align:center;">Estado</th>    
                        <th colspan="3" style="text-align:center;" >Acciones</th>
                    </tr>
                  </thead>
                  <tbody style="    text-align-last: start;">
                      @foreach (var obra in Model.obras)
                    {
                    <tr>
                    <td>@Model.clientes.Where(x=>x.Correo==obra.IdUsuarioObra).Select(c => c.Nombre).FirstOrDefault()</td>
                    <td>@Model.clientes.Where(x=>x.Correo==obra.IdUsuarioObra).Select(c => c.Apellido).FirstOrDefault()</td>
                    <td>@obra.NombreObra</td>
                    <td>@Model.estadosObra.Where(x=>x.IdEstadoObra==obra.IdObraEstado).Select(eo => eo.NombreEstadoObra).FirstOrDefault()</td>
                    
                    <td style = "text-align:center;" margen>
                      <a class= "btn btn-primary" asp-action="Detalle"  asp-route-id="@obra.IdObra" >Ver Detalles</a>
                       @if (obra.IdObraEstado==9)
                      {
                            <a class= "btn btn-success" asp-action="ObraTerminada"  asp-route-id="@obra.IdObra" >Obra Terminada</a>
                      }
                      </td>
                      
                    </tr>
                    }
                  </tbody>
                </table>
                  <!-- /.card-body -->
              <div class="card-footer clearfix">
                <ul class="pagination pagination-sm m-0 float-right">
                  <li class="page-item"><a class="page-link" href="#">«</a></li>
                  <li class="page-item"><a class="page-link" href="#">1</a></li>
                  <li class="page-item"><a class="page-link" href="#">2</a></li>
                  <li class="page-item"><a class="page-link" href="#">3</a></li>
                  <li class="page-item"><a class="page-link" href="#">»</a></li>
                </ul>
              </div>
            </div>
            <!-- /.card -->
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
        </div>

      </div><!-- /.container-fluid -->
    </section>