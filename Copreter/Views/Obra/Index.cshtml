@model TObra;
@{
    ViewData["Title"]="Index";
}

    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Lista de Solicitud</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Solicitar</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
        
        </div>
        <!-- /.row -->
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <div class="card-tools">
                  <div class="input-group input-group-sm" style="width: 150px;">
                    <input type="text" name="table_search" class="form-control float-right" placeholder="Search">
                    <div class="input-group-append">
                      <button type="submit" class="btn btn-default">
                        <i class="fas fa-search"></i>
                      </button>
                    </div>
                  </div>
                </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                  <thead style="    text-align-last: left;">
                    <tr>
                       <th style="text-align:center;">Empresa</th>
                        <th style="text-align:center;">Direccion</th>
                        <th style="text-align:center;">Nombre de la obra</th> 
                        <th style="text-align:center;">Estado</th>    
                        <th colspan="3" style="text-align:center;" >Acciones</th>
                    </tr>
                  </thead>
                  <tbody style="text-align-last: start;">
                      @foreach (TObra  item in ViewBag.Obra)
                    {
                    <tr>
                    <td>@item.Empresa</td>
                    <td>@item.Direccion</td>
                    <td>@item.NombreObra</td>
                    <td>@item.IdObraEstadoNavigation.NombreEstadoObra</td>
                    <td style = "text-align:center;" margen>
                      <a class= "btn btn-primary" asp-controller="Obra" asp-action="Detalle"  asp-route-id="@item.IdObra" >Ver Obra</a>
                       @if (item.IdObraEstado==3)
                    {
                       <a class= "btn btn-danger" asp-controller="Cita" asp-action="Solicitar"  asp-route-id="@item.IdObra" >Solicitar Cita</a>
                    }
                      @if (item.IdObraEstado==5)
                    {
                        <a class= "btn btn-danger" asp-controller="Cotizar" asp-action="ListarPdf"  asp-route-id="@item.IdObra" >Ver Cotizacion</a>
                        <a class= "btn btn-warning" asp-controller="Obra" asp-action="ObraAceptada"  asp-route-id="@item.IdObra" >Aceptar</a>
                        <a class= "btn btn-success" asp-controller="Obra" asp-action="ObraRechazada"  asp-route-id="@item.IdObra" >Rechazar</a>
                    }
                     @if (item.IdObraEstado==2)
                    {
                        <a class= "btn btn-danger" asp-controller="Cotizar" asp-action="ListarPdf"  asp-route-id="@item.IdObra" >Ver Cotizacion</a>
                        
                    }
                     @if (item.IdObraEstado==7 || item.IdObraEstado==10)
                    {
                        <a class= "btn btn-danger" asp-controller="Cotizar" asp-action="ListarPdf"  asp-route-id="@item.IdObra" >Ver Cotizacion</a>
                         <a class= "btn btn-danger" asp-controller="Cotizar" asp-action="DetalleCoti"  asp-route-id="@item.IdObra" >Pagar</a>
                        
                    }
                      </td>
                    </tr>
                    }
                  </tbody>
                </table>
                  <!-- /.card-body -->
              <div class="card-footer clearfix">
                <ul class="pagination pagination-sm m-0 float-right">
                  <li class="page-item"><a class="page-link" href="#">«</a></li>
                  <li class="page-item"><a class="page-link" href="#">1</a></li>
                  <li class="page-item"><a class="page-link" href="#">2</a></li>
                  <li class="page-item"><a class="page-link" href="#">3</a></li>
                  <li class="page-item"><a class="page-link" href="#">»</a></li>
                </ul>
              </div>
            </div>
            <!-- /.card -->
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
        </div>

      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->