@using Copreter.Resources;
@using Copreter.Utils;
@model Copreter.Models.Acceso.AccesoIndexVM;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>@Resource.USUARIO_Titulo</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">@Resource.USUARIO_Titulo</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header p-2">
                            <ul class="nav nav-pills">
                                <li class="nav-item"><a class="nav-link active" href="#activity" data-toggle="tab">@Resource.TAB_Filtro</a></li>
                            </ul>
                        </div><!-- /.card-header -->
                        <div class="card-body">
                            <div class="tab-content">
                                <div class="active tab-pane" id="activity">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="control-label">@Resource.USUARIO_Rol</label>
                                           @*     <input asp-for="Filtro.Registro" class="form-control" />
                                                <span asp-validation-for="Filtro.Registro" class="text-danger"></span>*@
                                            </div>
                                        </div>
                                        <!-- /.col -->
                                        <div class="col-md-6">
                                            <div class="form-group">
                                           @*     <label class="control-label">@Resource.CLIENTE_Rol</label>
                                                <select asp-for="Filtro.IdRol" class="form-control" asp-items="Model.RolLista"></select>
                                                <span asp-validation-for="Filtro.IdRol" class="text-danger"></span>*@
                                            </div>
                                        </div>
                                        <!-- /.col -->
                                    </div>
                                    <!-- /.row -->

                                    <div class="row">
                                        <div class="col-md-4">
                                            <a type="button" class="btn btn-primary" asp-controller="Usuario" asp-action="Crear">
                                                <span class="fa fa-search" aria-hidden="true"></span>@Resource.BTN_Crear
                                            </a>
                                        </div>
                                        <!-- /.col -->
                                        <div class="col-md-4">
                                        
                                        </div>
                                        <!-- /.col -->
                                        <div class="col-md-2">
                                    
                                        </div>
                                        <div class="col-md-2">
                                            <button type="button" class="btn btn-primary" style="float: right;" onclick="Filtrar();">
                                                <span class="fa fa-search" aria-hidden="true"></span>@Resource.BTN_Filtrar
                                            </button>
                                        </div>
                                        <!-- /.col -->
                                    </div>
                                    <!-- /.row -->

                                </div>
                                <!-- /.tab-pane -->

                                <!-- /.tab-pane -->
                            </div>
                            <!-- /.tab-content -->
                        </div><!-- /.card-body -->
                    </div>

                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">@Resource.CARD_TITLE</h3>
                        </div>
                        <div class="card-body">
                            <div id="contentPartial">
                                @await Html.PartialAsync(Keys.PartialViewKeys.Index)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="divPopupEliminarAcceso"></div>

    </section>
</div>

@section Scripts{
    <script type="text/javascript">
        function eliminar(id) {
            var param = {
                id: parseInt(id)
            };
            $.llamadaAjax('POST', 'html', 'json', '@Url.Action(Keys.ActionKeys.DeletePopup, Keys.ControllerKeys.Acceso)', JSON.stringify(param), function (data) {
                $.procesaRespuestaVistaParcial(data, $("#divPopupEliminarAcceso"));
            }, function (XMLHttpRequest, textStatus, errorThrown) {
                notificacionAjax('@Resource.RESULT_ERROR', errorThrown, '@Resource.BTN_Aceptar');
            });
        };
    </script>
}