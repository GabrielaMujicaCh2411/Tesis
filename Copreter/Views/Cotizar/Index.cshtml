@using Program.Models;
@{
    ViewData["Title"]="Index";
}

    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Lista de Cotizaciones</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Cotizaciones</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
        </div>
        <!-- /.row -->
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <div class="card-tools">
                  <div class="input-group input-group-sm" style="width: 150px;">
                    <input type="text" name="table_search" class="form-control float-right" placeholder="Search">
                    <div class="input-group-append">
                      <button type="submit" class="btn btn-default">
                        <i class="fas fa-search"></i>
                      </button>
                    </div>
                  </div>
                </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                  <thead style="    text-align-last: left;">
                    <tr>
                       <th style="text-align:center;">N° Cotizacion</th>
                        <th style="text-align:center;">N° Obra</th>
                        <th style="text-align:center;">Total</th>    
                        <th style="text-align:center;">Fecha</th>
                        <th style="text-align:center;">Estado</th>
                        <th colspan="3" style="text-align:center;" >Acciones</th>
                    </tr>
                  </thead>
                  <tbody style="text-align-last: start;">
                      @foreach (TCotizacion  item in ViewBag.Cotizacion)
                    {
                    <tr>
                    <td>@item.IdCotizacion</td>
                    <td>@item.IdObraCotizacion</td>
                    <td>@item.Total</td>
                    <td>@item.Fecha</td>
                    <td>@item.IdCotizacionEstadoNavigation.NombreEstadoCotizacion</td>
                    <td ><a class= "btn btn-success" asp-page="/Detalles"   >Detalle Cotizacion</a></td>
                     <td ><a class= "btn btn-danger" asp-page="/Detalles"   >Detalles de Partidas</a></td>
                    </tr>
                    }
                  </tbody>
                </table>
                  <!-- /.card-body -->
              <div class="card-footer clearfix">
                <ul class="pagination pagination-sm m-0 float-right">
                  <li class="page-item"><a class="page-link" href="#">«</a></li>
                  <li class="page-item"><a class="page-link" href="#">1</a></li>
                  <li class="page-item"><a class="page-link" href="#">2</a></li>
                  <li class="page-item"><a class="page-link" href="#">3</a></li>
                  <li class="page-item"><a class="page-link" href="#">»</a></li>
                </ul>
              </div>
            </div>
            <!-- /.card -->
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
        </div>

      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->