@model PrograTesis.Controllers.CitaController.ModelCita
@{
    ViewData["Title"]="Listar Citas";
}

<section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1> Citas pendientes</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Citas</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

<section class="content">
      <div class="container-fluid">
        <div class="row">
        
        </div>
        <!-- /.row -->
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <div class="card-tools">
                  <div class="input-group input-group-sm" style="width: 150px;">
                    <input type="text" name="table_search" class="form-control float-right" placeholder="Search">
                    <div class="input-group-append">
                      <button type="submit" class="btn btn-default">
                        <i class="fas fa-search"></i>
                      </button>
                    </div>
                  </div>
                </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                  <thead style="    text-align-last: left;">
                    <tr>
                       <th style="text-align:center;">N° Cita</th>    
                       <th style="text-align:center;">Obra</th>
                       <th style="text-align:center;">Nombre de la Obra</th> 
                       <th style="text-align:center;">Nombre de la Empresa</th> 
                       <th style="text-align:center;">Estado</th> 
                        <th colspan="3" style="text-align:center;" >Acciones</th>
                    </tr>
                  </thead>
                  <tbody style="text-align-last: start;">
                      @foreach (var cita in Model.citas)
                    {
                    <tr>
                    <td>@cita.IdCita</td>
                    <td>@Model.obras.Where(x=>x.IdObra==cita.IdObraCita).Select(c => c.IdObra).FirstOrDefault()</td>
                    <td>@Model.obras.Where(x=>x.IdObra==cita.IdObraCita).Select(c => c.NombreObra).FirstOrDefault()</td>
                    <td>@Model.obras.Where(x=>x.IdObra==cita.IdObraCita).Select(c => c.Empresa).FirstOrDefault()</td>
                    <td>Citado</td>
                    <td style = "text-align:center;" margen>
                        <a class= "btn btn-primary" asp-action="Detalle"  asp-route-id="@cita.IdCita" >Ver Detalles</a>
                    </td>
                    </tr>
                    }
                  </tbody>
                </table>
                  <!-- /.card-body -->
              <div class="card-footer clearfix">
                <ul class="pagination pagination-sm m-0 float-right">
                  <li class="page-item"><a class="page-link" href="#">«</a></li>
                  <li class="page-item"><a class="page-link" href="#">1</a></li>
                  <li class="page-item"><a class="page-link" href="#">2</a></li>
                  <li class="page-item"><a class="page-link" href="#">3</a></li>
                  <li class="page-item"><a class="page-link" href="#">»</a></li>
                </ul>
              </div>
            </div>
            <!-- /.card -->
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
        </div>

      </div><!-- /.container-fluid -->
    </section>

    @if(ViewBag.Message != null)
{
<script>

$(document).ready(function(){

alert('@ViewBag.Message');

});

</script>

}