@using Copreter.Resources;
@model Copreter.Models.Cita.CitaIndexVM;

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayName(@Resource.CITA_Nro)
            </th>
            <th>
                @Html.DisplayName(@Resource.CITA_Obra)
            </th>
            <th>
                @Html.DisplayName(@Resource.CITA_Nombre_Obra)
            </th>
            <th>
                @Html.DisplayName(@Resource.CITA_Nombre_Empresa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.DtoList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem =>item.Id)
                </td>
                <td>
                   @Html.DisplayFor(modelItem =>item.IdObra)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreObra)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreEmpresa)
                </td>
                <td>
                    <a type="button" class="btn btn-success" asp-action="Detalle" asp-route-id="@item.Id">
                        <span class="fa fa-pencil" aria-hidden="true"></span>
                    </a>

                    <button type="button" class="btn btn-danger" data-toggle="modal" onclick="eliminar(@item.Id);">
                        <span class="fa-light fa-trash" aria-hidden="true"></span>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>